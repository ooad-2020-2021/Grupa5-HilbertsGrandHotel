@model IEnumerable<HilbertsGrandHotel_KP.Models.NaplataRecepcioner>

@{
    ViewData["Title"] = "Index";
}


<div class="odvojiOdHeadera">
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Iznos
            </th>
            <th>
                Korisnik
            </th>
            <th>
                Soba
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.iznos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.korisnik.firstName + " " +item.korisnik.lastName)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => "Soba br." + item.soba.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>